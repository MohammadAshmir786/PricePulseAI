# Environment variables for PricePulseAI server

# Application name
APP_NAME=PricePulseAI

# Server port
PORT=4000

# MongoDB connection URI
# For production, use MongoDB Atlas connection string:
# mongodb+srv://<username>:<password>@cluster.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URI="mongodb://localhost:27017/pricepulseai"

# CORS configuration
# For production, set to your deployed client URL (e.g., https://your-app.vercel.app)
CLIENT_ORIGIN=http://localhost:5173
# For production, set to your deployed AI service URL (e.g., https://your-ai-service.onrender.com)
AI_SERVICE_URL=http://localhost:5000

# JWT secret for signing tokens
# IMPORTANT: Generate strong random secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-me
JWT_REFRESH_SECRET=change-me-refresh

# Razorpay API credentials
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_SECRET_KEY

# Email configuration
EMAIL_USER="your-email@example.com"
EMAIL_PASS="abcd efgh ijkl mnop"

# OAuth providers (optional, enable to use social login)
# Set to your app credentials from Google Cloud Console and GitHub Developer Settings
GOOGLE_CLIENT_ID= your_google_client_id_here
GOOGLE_CLIENT_SECRET= your_google_client_secret_here
GITHUB_CLIENT_ID= your_github_client_id_here
GITHUB_CLIENT_SECRET= your_github_client_secret_here

# If behind a proxy or non-standard host, set explicit server base URL for callback construction
# For production, set to your deployed server URL (e.g., https://your-api.onrender.com)
SERVER_BASE_URL=http://localhost:4000

# chatbot AI Service API Key
GROQ_API_KEY= your_groq_api_key_here

